{
  "name": "StudentIReport",
  "displayName": "Student IReport",
  "expo": {
    "name": "Student iReport",
    "slug": "student-ireport",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "splash": {
      "image": "./src/assets/splash.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.studentireport.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to take photos for incident reports.",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select images for incident reports.",
        "NSMicrophoneUsageDescription": "This app needs access to microphone to record audio notes.",
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to tag incident locations."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "package": "com.studentireport.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO"
      ]
    }
  }
}
